{
  "name": "modufolio/toolkit",
  "description": "Modufolio toolkit is a set of handy classes and helpers which make your life with PHP easier, based on Kirby 3 Toolkit",
  "keywords": [
    "kirby",
    "toolkit"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Kirby Team",
      "email": "support@getkirby.com",
      "homepage": "https://getkirby.com"
    }
  ],
  "require": {
    "php": "^7.4|^8.0",
    "ext-pdo": "*",
    "ext-simplexml": "*",
    "ext-dom": "*",
    "ext-zip": "*",
    "ext-json": "*",
    "ext-fileinfo": "*",
    "ext-libxml": "*",
    "ext-ctype": "*",
    "ext-mbstring": "*",
    "claviska/simpleimage": "3.6.3",
    "filp/whoops": "2.14.4",
    "laminas/laminas-escaper": "2.9.0",
    "michelf/php-smartypants": "1.8.1",
    "mustangostang/spyc": "0.6.3",
    "phpmailer/phpmailer": "6.5.1",
    "psr/log": "1.1.4",
    "true/punycode": "2.1.1",
    "ext-readline": "*"
  },
  "config": {
    "optimize-autoloader": true,
    "platform-check": false,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "autoload": {
    "psr-4": {
      "Modufolio\\": "src/"
    }

  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "pestphp/pest": "^1.21"
  }
}
